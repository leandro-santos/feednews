#feed
  .screenSize
    - feeds.each_with_index do |feed, i|
      .content
        - if i < 1
          .publicity
            :javascript
              google_ad_client = "ca-pub-2426498620141581";
              /* feed */
              google_ad_slot = "8886408355";
              google_ad_width = 300;
              google_ad_height = 250;
            %script{src: "http://pagead2.googlesyndication.com/pagead/show_ads.js"}

        - if i == 3
          .publicity2
            :javascript
              google_ad_client = "ca-pub-2426498620141581";
              /* publicity2 */
              google_ad_slot = "2442921952";
              google_ad_width = 300;
              google_ad_height = 250;
            %script{src: "http://pagead2.googlesyndication.com/pagead/show_ads.js"}

        - if !feed.image_link.blank? && !feed.image_url.blank?
          = link_to image_tag(feed.image_url,class: 'imageTitle'), feed.image_link, target: '_blank'
        .title
          %h1.titleRss
            - if !feed.link.blank?
              = link_to feed.title, feed.link, class: 'linkFeedTitle', target: '_blank'
            - else
              = feed.title
          %h3.subTitleRss
            = feed.description
        - feed.most_recent.take(6).each do |newsItem|
          .linkNewsTitle
            %h4.linkNews
              - if newsItem.link.blank?
                = newsItem.title
              - else
                = link_to newsItem.title, newsItem.link, class: 'linkNews', target: '_blank'
            %h6.date
              = l(newsItem.pub_date, format: :long) if newsItem.pub_date.present?
          .feedNews
            = newsItem.description.html_safe if !newsItem.description.blank?
        %span
          = link_to 'Mais notÃ­cias >>', category_item_path(id: category, feed: feed.slug), class: 'newsMore'
    = will_paginate feeds